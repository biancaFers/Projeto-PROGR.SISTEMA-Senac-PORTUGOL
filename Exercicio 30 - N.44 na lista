programa {
  funcao inicio() {
   inteiro valor1, valor2, incre

		escreva("Digite o primeiro valor: ")
		leia(valor1)
		escreva("Digite o Ãºtimo valor: ")
		leia(valor2)
		escreva("Digite o incremento: ")
		leia(incre)
    
		se (valor1 <= valor2) {
			enquanto (valor1 <= valor2) {
				escreva(" "+valor1+" ")
				valor1 = valor1 + incre
			}
		}
		senao {
			enquanto (valor1 >= valor2) {
				escreva(" "+valor1+" ")
				valor1 = valor1 - incre
			}
		}
		escreva(" Acabou!") 
  }
}
